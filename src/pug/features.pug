extends layouts/base

block modals
  include mixins/feature_card
  each feature in content.features
    +modal_feature_card(feature.title, feature.description, feature.images, feature.id)

block content
  include mixins/feature_card
  section.pb-2.pb-lg-4
    .container.px-lg-3
      .row
        each feature in content.features
          - var image_width = 6;
          - if (feature.hasOwnProperty('image_width')) image_width = feature.image_width;
          +feature_card(feature.title, feature.description, feature.images, feature.id, image_width)
