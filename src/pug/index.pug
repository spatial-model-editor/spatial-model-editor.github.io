extends util/layout

block vars
  - var page_title = 'Spatial Model Editor';
  - var page_url = 'index.html';

block content
  include util/cards

  // text:url pairs for each feature card:

  - var doc_links = { 'Spatial Model Editor': 'https://spatial-model-editor.readthedocs.io/en/stable/quickstart/get-started.html', 'sme (Python interface)': 'https://spatial-model-editor.readthedocs.io/en/stable/sme/sme.html', 'sme-contrib (Python extras)': 'https://sme-contrib.readthedocs.io' };
  - var python_links = { sme: 'https://pypi.org/project/sme', 'sme-contrib': 'https://pypi.org/project/sme-contrib', 'Try it online': 'https://colab.research.google.com/github/spatial-model-editor/spatial-model-editor/blob/master/docs/sme/notebooks/getting_started.ipynb' };
  - var example_links = { Screenshots: 'screenshots.html', Videos: 'videos.html' };
  - var pde_links = { 'dune-copasi': 'https://dune-copasi.netlify.app', Pixel: 'https://spatial-model-editor.readthedocs.io/en/stable/reference/pixel.html' };
  - var code_links = { 'Spatial Model Editor': 'https://github.com/spatial-model-editor/spatial-model-editor', 'sme-contrib': 'https://github.com/spatial-model-editor/sme-contrib', 'MIT License': 'https://github.com/spatial-model-editor/spatial-model-editor/blob/master/LICENSE' };

  header.py-5
    .container.px-lg-5
      img.float-start.w-25(
        src="assets/sme.svg",
        alt="Spatial Model Editor logo"
      )
      .p-4.p-lg-5.rounded-3.text-center
        .m-4.m-lg-2
          h1.display-5.fw-bold Spatial Model Editor
          p.fs-4
            | A user friendly GUI editor to create and edit two-dimensional
            | spatial SBML models of bio-chemical reactions and simulate them
            | using the dune-copasi solver for reaction-diffusion systems.

  section.pt-4
    .container.px-lg-5
      // Page Features
      .row.gx-lg-5
        +feature_card("Documentation", "bi-book", doc_links)
        +feature_card_downloads
        +feature_card("Python interface", "bi-braces", python_links)
        +feature_card("Examples", "bi-collection-play", example_links)
        +feature_card("PDE Solvers", "bi-cpu", pde_links)
        +feature_card("Source Code", "bi-github", code_links)
